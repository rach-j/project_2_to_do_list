<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.completionist.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mainActivityHeader"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/priorityToggleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/priority_toggle_label"
            app:layout_constraintEnd_toStartOf="@+id/togglePriorityOrder"
            app:layout_constraintHorizontal_bias="0.955"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/togglePriorityOrder"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:onClick="onPriorityToggleButtonClicked"
            app:layout_constraintBottom_toTopOf="@+id/toggleCompleteView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.454" />

        <ToggleButton
            android:id="@+id/toggleCompleteView"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:onClick="onViewAllToggleButtonClicked"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/completeStatusToggleLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/complete_status_toggle_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/toggleCompleteView" />

    </android.support.constraint.ConstraintLayout>

    <ListView
        android:id="@+id/listViewTasks"
        android:layout_width="wrap_content"
        android:layout_height="439dp"
        app:layout_constraintTop_toBottomOf="@+id/mainActivityHeader">

    </ListView>

    <Button
        android:id="@+id/buttonAddNewTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="onAddTaskClicked"
        android:text="@string/buttonAddNewTask"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewTasks"
        app:layout_constraintVertical_bias="1" />
</android.support.constraint.ConstraintLayout>
