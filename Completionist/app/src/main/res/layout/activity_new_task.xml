<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/taskTitleNew"
            android:labelFor="@+id/titleInputNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_title_new"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/titleInputNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textShortMessage" />

        <TextView
            android:id="@+id/taskDescriptionNew"
            android:labelFor="@+id/descriptionInputNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_description_new" />

        <EditText
            android:id="@+id/descriptionInputNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textLongMessage" />

        <TextView
            android:id="@+id/taskPriorityNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_priority_new" />

        <Spinner
            android:id="@+id/prioritySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/priorities" />

        <Button
            android:id="@+id/buttonConfirmAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/button_confirm_add" />

    </LinearLayout>

</android.widget.RelativeLayout>